#!/bin/bash -e
BRANCH=good-day

cd $HOME
if [ -d "$HOME/$(basename $HOME)" ]; then
  pushd $(basename $HOME)
  git remote add local file://$HOME/ || true
  git fetch local
  git checkout $BRANCH
  git merge local/$BRANCH
else
  git clone --single-branch --branch ${BRANCH} file://$HOME/
  pushd $(basename $HOME)
fi

git filter-repo \
--path .lc \
--path notes.md \
--path .config/clash \
--path .kaggle  \
--path bin/v2ray_client.json \
--path bin/v2ray_router_client.json \
--path-glob '.config/v2ray*.json' \
--path-glob '.*history' \
--path .duckdns \
--path .electrum \
--path .pypirc \
--path works \
--path bin/filter_public \
--invert-paths
git remote add public git@github.com:pennz/dotfiles.git || true
git fetch public
git merge public/$BRANCH
git push --set-upstream public $BRANCH
popd
