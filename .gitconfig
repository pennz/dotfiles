[init]
	templatedir = ~/.git_template/template
[user]
    email = fireflysuccess@gmail.com
    name = Vincent Zhou
    signingkey = 3FCEC9A87E8D419A
[color]
    branch = auto
    diff = auto
    grep = auto
    interactive = auto
    pager = true
    showbranch = auto
    status = auto
    ui = auto
    decorate = auto
[color "branch"]
    current = yellow reverse
    local = green
    remote = red
    plain = cyan
[color "diff"]
    frag = magenta
    meta = yellow
    old = red bold
    new = green bold
    whitespace = red
    commit = yellow
    plain = normal
[color "interactive"]
    header = yellow bold
    help = red bold
    prompt = cyan bold
    error = magenta bold
[color "status"]
    added = yellow bold
    changed = green bold
    header = normal
    untracked = cyan
    nobranch = red bold
[color "decorate"]
    branch = green bold
    remoteBranch = red bold
    tag = magenta bold
    stash = magenta bold
    HEAD = cyan bold
[core]
    editor = vim -u NONE
    whitespace = trailing-space,space-before-tab
    autocrlf = input
    excludesfile = ~/.gitignore
[alias]
    aa = add --all
    ap = add --patch
    branches = for-each-ref --sort=-committerdate --format=\"%(color:blue)%(authordate:relative)\t%(color:red)%(authorname)\t%(color:white)%(color:bold)%(refname:short)\" refs/remotes
    ci = commit -v
    co = checkout
    pf = push --force-with-lease
    st = status
    logp = log --pretty=oneline --graph --decorate=full
    logt = log --pretty=oneline --graph --topo-order
    logd = log --pretty=oneline --graph --date-order
    loga = log --oneline --decorate=full
    lg1 = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(bold yellow)%d%C(reset)' --all
    lg2 = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold cyan)%aD%C(reset) %C(bold green)(%ar)%C(reset)%C(bold yellow)%d%C(reset)%n''          %C(white)%s%C(reset) %C(dim white)- %an%C(reset)' --all
    lg = !"git lg1"
[format]
    pretty = fuller
[gui]
    commitmsgwidth = 0
[merge]
    log = true
    tool = diffconflicts
[mergetool "diffconflicts"]
    cmd = diffconflicts vim $BASE $LOCAL $REMOTE $MERGED
    trustExitCode = true
[mergetool]
    keepBackup = false
[fetch]
  prune = true
[push]
    default = simple
[rebase]
  autosquash = true
[diff "localizablestrings"]
    textconv = "iconv -f utf-16 -t utf-8"
[diff "utf16"]
    textconv = "iconv -f utf-16 -t utf-8"
[gpg]
    program = gpg
[commit]
    gpgsign = true
    template = ~/.gitmessage
[include]
    path = ~/.gitconfig.local
[pull]
	rebase = false
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
